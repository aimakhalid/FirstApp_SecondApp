<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".activities.ProfileActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/ten_dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="@dimen/one_fifty_dp"
                    android:contentDescription="@string/user_iamge"
                    tools:ignore="UnusedAttribute"/>

            <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:text="Hussnain Raza"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/eighteen_sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:maxLines="1"
                    android:text="xani@gmail.com"
                    android:textColor="@android:color/black"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seven_dp"
                    android:background="@color/colorGrayLight"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingStart="@dimen/ten_dp"
                    android:text="@string/personal"
                    android:textColor="@android:color/black"
                    tools:ignore="RtlSymmetry"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_dp"
                    android:background="@color/colorGrayLight"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/phone"
                        android:padding="@dimen/ten_dp"
                        android:layout_weight="0.5"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/profile_phone"
                        android:padding="@dimen/ten_dp"
                        android:layout_weight="1"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/type"
                        android:padding="@dimen/ten_dp"
                        android:layout_weight="0.5"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/profile_type"
                        android:padding="@dimen/ten_dp"
                        android:layout_weight="1"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</ScrollView>