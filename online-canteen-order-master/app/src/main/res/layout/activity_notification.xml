<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/n_image"
                        android:layout_width="60dp"
                        android:scaleType="centerCrop"
                        android:layout_height="60dp"
                        android:src="@drawable/oco_icon"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    tools:ignore="RtlSymmetry">

                <TextView
                        android:id="@+id/n_order"
                        android:textColor="@android:color/black"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="38dp"
                        android:layout_marginEnd="38dp"/>
                <TextView
                        android:id="@+id/n_by"
                        android:text="Fri Jun 29, 2018 10:28:20"
                        android:textColor="@color/colorAccent"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/n_time"
                        android:text="Fri Jun 29, 2018 10:28:20"
                        android:textColor="@color/colorGrayDarker"
                        android:fontFamily="serif-monospace"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <TextView android:id="@+id/n_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/twenty_dp"
                  android:layout_marginRight="@dimen/ten_dp"
                  android:fontFamily="sans-serif-smallcaps"
                  android:textColor="@android:color/black"
                  android:text="dfhggggggggggggggggggggggggfd"
                  android:layout_marginStart="@dimen/twenty_dp"
                  android:layout_marginEnd="@dimen/ten_dp"/>

        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginTop="@dimen/ten_dp"
              android:layout_marginLeft="@dimen/twenty_dp"
              android:layout_marginRight="@dimen/ten_dp"
              android:background="@color/colorGrayDarker"
              android:layout_marginStart="@dimen/twenty_dp"
              android:layout_marginEnd="@dimen/ten_dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>